@*@model IEnumerable<Hrinnova_FormsProject.DatabaseModel.employee_details>*@
@model Hrinnova_FormsProject.Models.EditIndexModel
@{
    ViewBag.Title = "EditIndex2";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<h2 align="center">Edit Employee Details Index</h2>

<div class="container-fluid">
    <div class="middel-content">
        <div class="clearfix">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table id="myTable" class="table table-responsive table-condensed table-bordered ">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Employee ID")
                                </th>
                                <th>
                                    @Html.DisplayName("Employee Code")
                                </th>
                                <th>
                                    @Html.DisplayName("Firstname")
                                </th>
                                <th>
                                    @Html.DisplayName("Surname")
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model.Employeedetails)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employee_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employee_code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.firstname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.surname)
                                </td>

                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.employee_id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.employee_id }) |
                                        @Html.ActionLink("ESIC", "Esicform","FormPopulate", new { id = item.employee_id }, null) |
                                            @Html.ActionLink("PF", "Epfoform", "FormPopulate", new { id = item.employee_id },null)*@
                                    @Html.DropDownList(
    "url",
    new SelectList(new[]
    {
        new SelectListItem { Text = "Edit User Details", Value = Url.Action("Edit", "Edit", new {id=item.employee_id }) },
        new SelectListItem { Text = "Employee Details Form", Value = Url.Action("EmployeeDetails", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "Employee Reference Check", Value = Url.Action("EmployeeReferenceCheck", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "Employment Form", Value = Url.Action("EmploymentForm", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "EPFO Form", Value = Url.Action("Epfoform", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "Esicform", Value = Url.Action("Esicform", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "PF Transfer Form", Value = Url.Action("PFTransferForm", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "SUMS Employee Verification", Value = Url.Action("SUMSEmployeeVerification", "FormPopulate", new {id=item.employee_id }) },
        new SelectListItem { Text = "Feedback", Value = Url.Action("FeedbackForm", "FormPopulate", new {id=item.employee_id }) },

    }, "Value" , "Text"),
    "---Action---",
    new { @class = "form-control urlddl" }
)
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('.urlddl').change(function (e) {
            debugger;
            var url = $(this).val();
            if (url != null && url != '') {
                window.location.href = url;
            };
            $(this).text("---Action---");
        });
        $('#myTable').DataTable();
    });
</script>