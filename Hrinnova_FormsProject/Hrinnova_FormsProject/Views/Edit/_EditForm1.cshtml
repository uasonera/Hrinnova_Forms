@model Hrinnova_FormsProject.Models.Model2
<link href="~/JsScript/select2/dist/css/select2.css" rel="stylesheet" />
<script src="~/JsScript/Copyaddressjs.js"></script>
<script src="~/JsScript/select2/dist/js/select2.full.min.js"></script>
<script src="~/JsScript/select2/dist/js/select2.js"></script>
@Html.AntiForgeryToken()
<div class="container-fluid">
    <div class="middel-content">
        <div class="clearfix">
            <div class="panel panel-default">
                <div class="panel-body">

                    <h1 align="center">Employee Details</h1>
                    <br>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Employeedetails.employee_id)
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Employee Code :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.employee_code, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.employee_code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Designation :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.ValidationMessageFor(model => model.Employeedetails.designation, "", new { @class = "text-danger" })
                                @Html.DropDownListFor(m => m.Employeedetails.roleID, Model.Designations.Select(d => new SelectListItem() { Value = d.roleID.ToString(), Text = d.name.ToString() }), new { @Style = "position:relative;height:34px;width:100%;",@class = "form-control select2", required = "required" })
                            </div>
                        </div>

                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Department :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.ValidationMessageFor(model => model.Employeedetails.department, "", new { @class = "text-danger" })
                                @Html.DropDownListFor(m => m.Employeedetails.DeptID, Model.Departments.Select(d => new SelectListItem() { Value = d.DeptID.ToString(), Text = d.DeptName.ToString() }), new { @Style = "position:relative;height:34px;width:100%;",@class = "form-control select2", required = "required" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">First Name :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.firstname, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.firstname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Middle Name :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.middlename, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.middlename, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Surname :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.surname, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.surname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Gender :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.RadioButtonFor(m => m.Employeedetails.gender, "male", new {@style="width:20px;height:20px;" }) <label class="control-label" style="padding-bottom:5px">Male</label>
                                @Html.RadioButtonFor(m => m.Employeedetails.gender, "female", new { @style = "width:20px;height:20px;" }) <label class="control-label">Female</label>
                                @Html.RadioButtonFor(m => m.Employeedetails.gender, "other", new { @style = "width:20px;height:20px;" }) <label class="control-label">Other</label>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Date of Birth :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.date_of_birth, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.date_of_birth, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Date of Joining :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.date_of_joining, new { htmlAttributes = new { @class = "form-control datepicker", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.date_of_joining, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Marital Status :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.ValidationMessageFor(model => model.Employeedetails.marital_status, "", new { @class = "text-danger" })
                                @Html.DropDownListFor(m => m.Employeedetails.marital_status, Model.Maritalstatus.Select(d => new SelectListItem() { Value = d.Id.ToString(), Text = d.Status.ToString() }), new { @class = "form-control chosen-select", required = "required" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">

                                <label class="control-label">Marriage <br> Anniversary :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.marriage_anniversary, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.marriage_anniversary, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Blood Group :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(m => m.Employeedetails.blood_group, Model.Bloodgroups.Select(d => new SelectListItem() { Value = d.Id.ToString(), Text = d.Bloodgroup.ToString() }),new { @class = "form-control chosen-select" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Contact Number :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.mobile_number, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.mobile_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Home Number :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.home_number, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.home_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Alternate Number :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.alternate_number, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.alternate_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Emergency <br /> Number :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.emergency_number, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.emergency_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Email Id :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.email_id, new { htmlAttributes = new { @class = "form-control", Type="email" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.email_id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Temporary<br> Address :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(model => model.Employeedetails.temporary_address, new { @style = "width:100%", @rows = 5 , @id="tempaddress", @class="form-control", required = "required" })
                                @Html.ValidationMessageFor(model => model.Employeedetails.temporary_address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                            </div>
                            <div class="col-sm-8">
                                <input type="checkbox"style="width: 20px; height: 20px;" onchange="copyaddress()" id="copyaddresscheck" />&nbsp; &nbsp;Permanent address is same as temporary address
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Permanent <br>Address:<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(model => model.Employeedetails.permanent_address, new { @style = "width:100%", @rows = 5, @id = "permaddress", @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(model => model.Employeedetails.permanent_address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Aadhar Card :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.aadhar_card, new { htmlAttributes = new { @class = "form-control", pattern= @"^\(?([0-9]{4})\)?[-. ]?([0-9]{4})[-. ]?([0-9]{4})$", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.aadhar_card, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">PAN Card :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.pan_card, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.pan_card, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Passport Number :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.passport_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.passport_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Validity of Passport :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.passport_validity, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.passport_validity, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Election Card :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.election_card, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.election_card, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Vehicle Number :<span style="color:red" class="required">*</span></label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.vehicle_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.vehicle_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Single Bank Account :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.single_bank_account, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.single_bank_account, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">IFS Code :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.ifs_code, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.ifs_code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>

                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Allergies:</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.allergies, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.allergies, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Known Ailments:</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Employeedetails.known_ailments, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Employeedetails.known_ailments, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/JsScript/Copyaddressjs.js"></script>
<script>
    $(function () {
        //Initialize Select2 Elements
        $('.select2').select2()
    })
</script>