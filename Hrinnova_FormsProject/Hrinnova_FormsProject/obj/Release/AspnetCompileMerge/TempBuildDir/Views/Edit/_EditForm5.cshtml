@model Hrinnova_FormsProject.Models.Model2


@Html.AntiForgeryToken() 
<div class="container-fluid">
    <div class="middel-content">
        <div class="clearfix">
            <div class="panel panel-default">
                <div class="panel-body">

                   
                        <h1 align="center">Employee's Provident Fund Information</h1>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Present Company's PF Number :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Epfodetails.presentcompany_pfnumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Epfodetails.presentcompany_pfnumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="control-label">Whether earlier a member of Employee's Provident Fund Scheme, 1952 :</label>

                            </div>
                            <div class="col-sm-5">
                                @Html.RadioButtonFor(m=>m.Epfodetails.member_of_epfoscheme, "yes", new { @style = "width:20px;height:20px;" })  Yes &nbsp;&nbsp; @Html.RadioButtonFor(m => m.Epfodetails.member_of_epfoscheme, "no", new { @style = "width:20px;height:20px;" }) No
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="control-label">Whether earlier a member of Employee's Pension Scheme, 1952 :</label>

                            </div>
                            <div class="col-sm-5">
                                @Html.RadioButtonFor(m => m.Epfodetails.member_of_epsscheme, "yes", new { @style = "width:20px;height:20px;" })  Yes &nbsp;&nbsp; @Html.RadioButtonFor(m => m.Epfodetails.member_of_epsscheme, "no", new { @style = "width:20px;height:20px;" }) No
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Universal Account Number :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Epfodetails.universal_account_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Epfodetails.universal_account_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Previous PF Account Number :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Epfodetails.prev_pf_acc_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Epfodetails.prev_pf_acc_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Scheme Certificate Number (if issued) :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Epfodetails.scheme_certificate_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Epfodetails.scheme_certificate_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Pension Payment Order (PPO) Number (if issued) :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Epfodetails.ppo_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Epfodetails.ppo_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">International Worker :</label>

                            </div>
                            <div class="col-sm-8">
                                @Html.RadioButtonFor(model => model.Epfodetails.international_worker, "Yes", new { @style = "width:20px;height:20px;" })&nbsp;Yes &nbsp; &nbsp;
                                @Html.RadioButtonFor(model => model.Epfodetails.international_worker, "No", new { @style = "width:20px;height:20px;" })&nbsp;No
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">If yes, State country of origin (India/Name of other country) :</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Epfodetails.country_of_origin, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Epfodetails.country_of_origin, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br>
                    
                </div>
            </div>
        </div>
    </div>

